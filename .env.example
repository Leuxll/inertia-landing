# CTA mode: "waitlist" (email capture) or "download" (App Store link)
NEXT_PUBLIC_CTA_MODE=waitlist

# Resend (required for waitlist signup)
RESEND_API_KEY=re_xxx
RESEND_AUDIENCE_ID=aud_xxx
RESEND_FROM_EMAIL=onboarding@resend.dev

# Upstash Redis (required in production for distributed rate limiting)
UPSTASH_REDIS_REST_URL=https://example.upstash.io
UPSTASH_REDIS_REST_TOKEN=your_upstash_token

# Optional health endpoint access token (required in production to access /api/health)
HEALTHCHECK_TOKEN=replace_with_a_long_random_token

# Pre-deploy smoke test
WAITLIST_SMOKE_EMAIL=smoke-check@getinertia.app
WAITLIST_SMOKE_PORT=4010
